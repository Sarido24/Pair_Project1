<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>DiscussIt - Manage Posts</title>
</head>

<body>
  <%- include('partials/navbar') %>
  <header class="container-fluid text-center">
    <h1 class="mt-4">Manage Posts</h1>
  </header>
  <main class="container-sm">
    <div class="row justify-content-center mt-4 mb-4">
      <div class="col-sm-auto">
        <a class="btn btn-primary" href="/posts/add">Add New Post</a>
      </div>
    </div>
    <div class="row justify-content-center mb-3">
      <div class="col-sm-auto">
        <form method="get">
          <input type="text" name="title" value="<%= title %>">
          <button class="btn btn-secondary" type="submit">Search</button>
        </form>
      </div>
    </div>
    <table class="table table-striped">
      <thead>
        <tr class="table-primary">
          <th scope="col">
            No.
          </th>
          <th scope="col">
            Title
          </th>
          <th scope="col">
            Description
          </th>
          <th scope="col">
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach((post, i) => { %>
          <tr>
            <td>
              <%= i + 1 %>
            </td>
            <td>
              <%= post.title %>
            </td>
            <td>
              <%= post.shortDesc() %>
            </td>
            <td>
              <a class="btn btn-primary" href="/posts/detail/<%= post.id %>">Open</a>
              <a class="btn btn-secondary" href="/posts/edit/<%= post.id %>">Edit</a>
              <a class="btn btn-danger" href="/posts/delete/<%= post.id %>">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</body>

</html>